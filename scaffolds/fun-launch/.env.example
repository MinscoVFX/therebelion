# ---------------- Cloudflare R2 Storage ----------------
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_ACCOUNT_ID=your_r2_account_id
R2_BUCKET=your_r2_bucket_name

# ---------------- Solana RPC ----------------
# Normal Solana RPC (Helius API key here)
RPC_URL=https://rpc.helius.xyz/?api-key=YOUR_KEY

# Jito / Helius Sender endpoint for bundle submission
JITO_RELAY_URL=https://sender.helius-rpc.com/fast

# ---------------- Meteora Pool Config ----------------
POOL_CONFIG_KEY=your_pool_config_key

# ---------------- DBC / DAMM v2 Defaults ----------------
# Enable IDL-based instruction resolution for DBC
DBC_USE_IDL=true
# Prefer withdraw instruction name when deriving discriminator
DBC_WITHDRAW_INSTRUCTION_NAME=remove_liquidity
# Default slippage tolerance (in basis points) for DAMM v2 withdraw flows
# 50 = 0.5%
DAMM_V2_SLIPPAGE_BPS_DEFAULT=50

# ---------------- Public URLs ----------------
R2_PUBLIC_BASE=your_r2_public_base
PUBLIC_BUCKET_URL=your_site_url

# ---------------- Fees ----------------
# Creation fee receiver (public wallet OK)
NEXT_PUBLIC_CREATION_FEE_RECEIVER=YOUR_PARTNER_WALLET_BASE58

# Default site for "created on" field
DEFAULT_CREATEDON=your_site_url

# ---------------- Migrated DBC Pools (optional)
# Comma-separated list of migrated DBC pool addresses (base58) to restrict DAMM v2 exit discovery.
# If you set this, the server-side DAMM v2 exit builder will filter to these pools. Leave empty to
# allow wallet-derived discovery (the planner will warn if empty).
# Example:
# MIGRATED_DBC_POOLS=GcPoo...AbC,9XxPoo...ZzZ
MIGRATED_DBC_POOLS=
