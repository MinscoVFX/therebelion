#############################################
# therebelion Environment Example            #
#############################################
# Copy to .env (scripts) and/or .env.local (Next.js) and adjust as needed.
# Never commit real secrets.

################################################
# CORE RPC (Fatal if missing in env-guard)      #
################################################
RPC_URL="https://api.mainnet-beta.solana.com"
# Optional separate public endpoint (browser)
# NEXT_PUBLIC_RPC_URL="https://api.mainnet-beta.solana.com"

################################################
# PROGRAM ALLOW LISTS (Warn if absent, fatal if malformed JSON)
################################################
ALLOWED_DBC_PROGRAM_IDS=["dbcij3LWUppWqq96dh6gJWwBifmcGfLSB5D4DuSMaqN"]
ALLOWED_DAMM_V2_PROGRAM_IDS=["cpamdpZCGKUy5JxQXB4dcpGPiikHawvSWAd6mEn1sGG"]

################################################
# DBC Instruction Resolution (optional)
################################################
# Use name-based auto-discovery first (preferred)
DBC_CLAIM_FEE_INSTRUCTION_NAME="auto"
# Optional: explicit withdraw instruction name (used when IDL is available)
# Common value in current DBC deployments is "remove_liquidity"
DBC_WITHDRAW_INSTRUCTION_NAME="remove_liquidity"
# Or provide discriminator (16 hex chars) instead of name:
# DBC_CLAIM_FEE_DISCRIMINATOR="ffffffffffffffff" # REPLACE BEFORE MAINNET IF USED
# DBC_WITHDRAW_DISCRIMINATOR="ffffffffffffffff" # REPLACE BEFORE MAINNET IF USED

################################################
# Performance Tunables (optional)
################################################
DEFAULT_PRIORITY_MICROS=250000
# DEFAULT_COMPUTE_UNIT_LIMIT=800000

# Default slippage tolerance (in basis points) for DAMM v2 withdraw flows (server-side defaults)
# 50 = 0.5%
DAMM_V2_SLIPPAGE_BPS_DEFAULT=50

################################################
# Diagnostics / Logging
################################################
LOG_LEVEL=info
COMMITMENT=confirmed

# End of file
