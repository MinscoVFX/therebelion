{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "skipLibCheck": true,
    "strict": false,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "packages/shared/utils/**/*",
    "studio/**/*",
    "scaffolds/fun-launch/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".turbo"
  ]
}
