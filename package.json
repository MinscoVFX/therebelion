{
  "name": "therebelion-launchpad",
  "version": "1.0.0",
  "description": "Solana launchpad with Meteora DBC integration",
  "type": "module",
  "main": "dist/index.js",
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "tsc && tsc-alias && turbo build",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts --fix && turbo lint",
  "lint:ci": "eslint src --ext .ts --max-warnings=0 && turbo lint",
    "format": "prettier --write . && turbo format",
    "format:check": "prettier --check . && turbo format:check",
    "syncpack:check": "syncpack list-mismatches",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "env:check": "node scripts/env-check.mjs",
    "preflight": "pnpm typecheck && pnpm lint && pnpm test:run",
    "health": "pnpm preflight",
    "health:full": "pnpm env:check && pnpm health"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@meteora-ag/cp-amm-sdk": "^1.1.0",
    "@meteora-ag/dlmm": "^1.0.0",
    "@meteora-ag/dynamic-bonding-curve-sdk": "^1.3.5",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.98.2",
    "bn.js": "^5.2.1",
    "bs58": "^5.0.0",
    "dotenv": "^16.4.5",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/node": "^20.19.4",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "syncpack": "^12.3.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.15.7",
    "turbo": "^2.3.0",
    "typescript": "^5.9.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
